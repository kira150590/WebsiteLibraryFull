@model DetailsUserViewModel
@section Styles
{
    <style>

        div {
            font-size: 16px;
            color: #007bff;
        }
    </style>
}

@using (Html.BeginForm("detailsUser", "Account", new { id = Model.Id }, FormMethod.Post, true, new { @class = "col-md-4" }))
{
    @Html.HiddenFor(x => x.Id);
    Html.AntiForgeryToken();

    <div class="form-group">
        @Html.LabelFor(x => x.Photo)
        <img src="~/images/@Model.Photo" with="150" height="150" alt="#" />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FirstName)
        @Html.DisplayFor(x => x.FirstName, new { placeholder = "", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.LastName)
        @Html.DisplayFor(x => x.LastName, new { placeholder = "", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.DisplayFor(x => x.Email, new { placeholder = "", @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Address)
        @Html.DisplayFor(x => x.Address, new { placeholder = "", @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Province)
        @Html.DisplayFor(x => x.Province, new { placeholder = "", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.District)
        @Html.DisplayFor(x => x.District, new { placeholder = "", @class = "form-control" })
    </div>
    @Html.ActionLink("Trở Về", "Users", "Account", null, new { @class = "btn btn-primary", type = "button" })
}